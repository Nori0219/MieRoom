<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="d-flex align-items-center justify-content-center py-4 bg-body-tertiary">
  <main class="form-signin w-100 m-auto">
    <form class="text-center"  action="/signup" method="post"  enctype="multipart/form-data">
      <img class="mb-4" src="/images/icon.png" alt="" width="72" height="57" loading="lazy">
      <div class="form-floating">
        <input  class="form-control" id="floatingInput" name="name" placeholder="ユーザー名">
        <label for="floatingInput">ユーザー名</label>
      </div>
      <div class="form-floating">
        <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="パスワード">
        <label for="floatingPassword">パスワード</label>
      </div>
      <div class="form-floating">
        <input type="password" name="password_confirmation" required class="form-control" id="floatingPassword" placeholder="パスワード">
        <label for="floatingPassword">パスワードを確認</label>
      </div>
      <p class="frex-right my-2">アイコン登録</p>
      <input type="file" accept="image/*" class="form-control mb-2" id="customFile" name="upload_photo">
      <button class="btn btn-primary w-100 py-2" type="submit">サインアップ</button>
   </form>
  </main>
</body>